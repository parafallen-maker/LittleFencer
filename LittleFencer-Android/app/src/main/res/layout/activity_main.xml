<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <!-- Camera Preview (Full Screen) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Skeleton Overlay (Drawn on top of camera) -->
    <com.littlefencer.app.ui.SkeletonOverlayView
        android:id="@+id/skeletonOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- HUD: Rep Counter (Top Right) -->
    <TextView
        android:id="@+id/repCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="24dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="72sp"
        android:textStyle="bold"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <!-- HUD: Combo Counter (Top Left) -->
    <LinearLayout
        android:id="@+id/comboContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:visibility="gone">
        
        <TextView
            android:id="@+id/comboCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3x"
            android:textColor="#FFD700"
            android:textSize="48sp"
            android:textStyle="bold"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />
        
        <TextView
            android:id="@+id/comboLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMBO!"
            android:textColor="#FFD700"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Status Text (Bottom Center) -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="48dp"
        android:text="Waiting for En Garde..."
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3" />

    <!-- Gallery Button (Bottom Left) -->
    <ImageButton
        android:id="@+id/galleryButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="24dp"
        android:background="@drawable/share_button_bg"
        android:contentDescription="View training videos"
        android:src="@drawable/ic_video_library"
        android:padding="12dp"
        android:elevation="4dp" />

    <!-- Share Button (Bottom Right) -->
    <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:background="@drawable/share_button_bg"
        android:contentDescription="Share last recording"
        android:src="@drawable/ic_share"
        android:padding="12dp"
        android:visibility="gone"
        android:elevation="4dp" />

</FrameLayout>
